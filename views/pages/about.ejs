<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us - Algorithms World</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #0f2027 0%, #203a43 25%, #2c5364 50%, #4a6741 75%, #6a5acd 100%);
            min-height: 100vh;
            color: white;
            overflow-x: hidden;
        }

        .container {
            min-height: 100vh;
            padding: 0 2rem;
        }

        /* Navigation */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 2rem 0;
        }

        .nav-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .menu-btn {
            background: rgba(138, 43, 226, 0.3);
            border: 2px solid rgba(138, 43, 226, 0.5);
            border-radius: 12px;
            padding: 0.75rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .menu-btn span {
            width: 20px;
            height: 2px;
            background: white;
            border-radius: 1px;
            transition: all 0.3s ease;
        }

        .menu-btn:hover {
            background: rgba(138, 43, 226, 0.5);
            transform: translateY(-2px);
        }

        .home-btn {
            background: rgba(138, 43, 226, 0.3);
            border: 2px solid rgba(138, 43, 226, 0.5);
            border-radius: 12px;
            padding: 0.75rem;
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .home-btn:hover {
            background: rgba(138, 43, 226, 0.5);
            transform: translateY(-2px);
        }

        .help-btn {
            background: rgba(138, 43, 226, 0.3);
            border: 2px solid rgba(138, 43, 226, 0.5);
            border-radius: 50%;
            padding: 0.75rem;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
        }

        .help-btn:hover {
            background: rgba(138, 43, 226, 0.5);
            transform: translateY(-2px);
        }

        /* Page Header */
        .page-header {
            text-align: center;
            margin: 3rem 0 4rem 0;
        }

        .page-title {
            font-size: 4rem;
            font-weight: 700;
            color: white;
            text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            animation: fadeInUp 0.8s ease-out;
        }

        /* Team Grid */
        .team-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 3rem;
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 0;
        }

        .team-member {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            animation: fadeInUp 0.8s ease-out;
            animation-fill-mode: both;
        }

        .team-member:nth-child(1) { animation-delay: 0.2s; }
        .team-member:nth-child(2) { animation-delay: 0.4s; }
        .team-member:nth-child(3) { animation-delay: 0.6s; }
        .team-member:nth-child(4) { animation-delay: 0.8s; }

        .member-avatar {
            width: 200px;
            height: 200px;
            margin-bottom: 2rem;
            position: relative;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .member-avatar:hover {
            transform: translateY(-10px) scale(1.05);
        }

        .avatar-placeholder {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 24px;
            position: relative;
            overflow: hidden;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .avatar-placeholder::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, 
                transparent 30%, 
                rgba(255, 255, 255, 0.1) 50%, 
                transparent 70%
            );
            transform: translateX(-100%);
            transition: transform 0.6s ease;
        }

        .member-avatar:hover .avatar-placeholder::before {
            transform: translateX(100%);
        }

        .avatar-placeholder::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            backdrop-filter: blur(10px);
        }

        .member-name {
            font-size: 1.4rem;
            font-weight: 600;
            color: white;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
            line-height: 1.4;
            transition: all 0.3s ease;
        }

        .team-member:hover .member-name {
            color: #a78bfa;
            transform: translateY(-5px);
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 0 1rem;
            }

            .navbar {
                padding: 1rem 0;
            }

            .page-title {
                font-size: 2.5rem;
            }

            .team-grid {
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 2rem;
            }

            .member-avatar {
                width: 160px;
                height: 160px;
            }

            .member-name {
                font-size: 1.2rem;
            }
        }

        @media (max-width: 480px) {
            .page-title {
                font-size: 2rem;
            }

            .team-grid {
                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .member-avatar {
                width: 140px;
                height: 140px;
            }

            .member-name {
                font-size: 1.1rem;
            }
        }

        /* Background Animation */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 20%, rgba(138, 43, 226, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(75, 0, 130, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 60%, rgba(72, 61, 139, 0.1) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
            animation: backgroundPulse 8s ease-in-out infinite;
        }

        @keyframes backgroundPulse {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 0.8; }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Navigation -->
        <nav class="navbar">
            <div class="nav-left">
                <button class="menu-btn" onclick="toggleMenu()">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
                <a href="index.html" class="home-btn">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M9 22V12H15V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </a>
            </div>
            <div class="nav-right">
                <button class="help-btn" onclick="showHelp()">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                        <path d="M9.09 9C9.3251 8.33167 9.78915 7.76811 10.4 7.40913C11.0108 7.05016 11.7289 6.91894 12.4272 7.03871C13.1255 7.15849 13.7588 7.52152 14.2151 8.06353C14.6713 8.60553 14.9211 9.29152 14.92 10C14.92 12 11.92 13 11.92 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M12 17H12.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
            </div>
        </nav>

        <!-- Page Title -->
        <div class="page-header">
            <h1 class="page-title">Our team</h1>
        </div>

        <!-- Team Members Grid -->
        <div class="team-grid">
            <div class="team-member">
                <div class="member-avatar">
                    <div class="avatar-placeholder"></div>
                </div>
                <h3 class="member-name">Lê Nhật Khôi</h3>
            </div>

            <div class="team-member">
                <div class="member-avatar">
                    <div class="avatar-placeholder"></div>
                </div>
                <h3 class="member-name">Nguyễn Hải Đăng</h3>
            </div>

            <div class="team-member">
                <div class="member-avatar">
                    <div class="avatar-placeholder"></div>
                </div>
                <h3 class="member-name">Phan Quốc Thịnh</h3>
            </div>

            <div class="team-member">
                <div class="member-avatar">
                    <div class="avatar-placeholder"></div>
                </div>
                <h3 class="member-name">Võ Ngọc Bích Trâm</h3>
            </div>
        </div>
    </div>

    <script>
        // Menu toggle function
        function toggleMenu() {
            const menuBtn = document.querySelector('.menu-btn');
            menuBtn.classList.toggle('active');
            
            // Add animation for menu button
            const spans = menuBtn.querySelectorAll('span');
            if (menuBtn.classList.contains('active')) {
                spans[0].style.transform = 'rotate(45deg) translate(5px, 5px)';
                spans[1].style.opacity = '0';
                spans[2].style.transform = 'rotate(-45deg) translate(7px, -6px)';
            } else {
                spans[0].style.transform = 'none';
                spans[1].style.opacity = '1';
                spans[2].style.transform = 'none';
            }
            
            // Here you can add logic to show/hide navigation menu
            console.log('Menu toggled');
        }

        // Help button function
        function showHelp() {
            alert('Đây là trang giới thiệu team phát triển Algorithms World! 🚀\n\nCác thành viên:\n• Lê Nhật Khôi\n• Nguyễn Hải Đăng\n• Phan Quốc Thịnh\n• Võ Ngọc Bích Trâm');
        }

        // Add click animation to team members
        document.querySelectorAll('.team-member').forEach(member => {
            member.addEventListener('click', function() {
                const name = this.querySelector('.member-name').textContent;
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                    alert(`Xin chào! Tôi là ${name} 👋`);
                }, 150);
            });
        });

        // Add parallax effect to avatars on mouse move
        document.addEventListener('mousemove', function(e) {
            const avatars = document.querySelectorAll('.member-avatar');
            const mouseX = e.clientX / window.innerWidth;
            const mouseY = e.clientY / window.innerHeight;

            avatars.forEach((avatar, index) => {
                const speed = (index + 1) * 0.3;
                const x = (mouseX - 0.5) * speed * 10;
                const y = (mouseY - 0.5) * speed * 10;
                avatar.style.transform = `translate(${x}px, ${y}px)`;
            });
        });
    </script>
</body>
</html>