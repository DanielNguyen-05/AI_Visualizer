<style>
  .backMenu {
      position: relative;
      top: 3rem;
      left: 2rem;
      max-width: 10%;
      display: flex;
      justify-content: center; 
      align-items: center;
      gap: 8px;
      padding: 10px 2rem;    
      background: rgba(255, 255, 255, 0.1);
      border-radius: 30px;
      color: white;
      text-decoration: none;
      font-weight: 500;
      transition: all 0.3s ease;
      overflow: hidden;
  }

  .backMenu svg {
      width: 20px;
      height: 20px;
      fill: white;
      position: absolute;      
      left: 20px;             
      display: none;
      transition: all 0.3s ease;
  }

  .backMenu:hover {
      background: rgba(151, 125, 255, 0.3);
      padding-right: 24px;
      box-shadow: 0 0 20px rgba(151, 125, 255, 0.5);
  }

  .backMenu:hover svg {
      /* transform: translateX(0); */
      display: inline;
  }

  .backMenu span {
      /* transform: translateX(0);  */
      transition: all 0.3s ease;
  }

  .backMenu:hover span {
      transform: translateX(1rem); 
  }
</style>
